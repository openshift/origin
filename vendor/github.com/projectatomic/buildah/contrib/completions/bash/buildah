     --help
     -h
     --pull
     --pull-always
     --quiet
     -q
     --tls-verify
  "

     local options_with_args="
     --add-host
     --authfile
     --cert-dir
     --cgroup-parent
     --cidfile
     --cni-config-dir
     --cni-plugin-path
     --cpu-period
     --cpu-quota
     --cpu-shares
     --cpuset-cpus
     --cpuset-mems
     --creds
     --ipc
     -m
     --memory
     --memory-swap
     --name
     --net
     --network
     --pid
     --signature-policy
     --security-opt
     --shm-size
     --ulimit
     --userns
     --userns-uid-map
     --userns-gid-map
     --userns-uid-map-user
     --userns-gid-map-group
     --uts
     --volume
  "


     case "$cur" in
         -*)
             COMPREPLY=($(compgen -W "$boolean_options $options_with_args" -- "$cur"))
             ;;
         *)
             __buildah_list_containers
             ;;
     esac
 }

