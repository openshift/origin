{
  "apiVersion": "v1beta1",
  "kind": "Template",
  "metadata": {
    "annotations": {
      "description": "This template creates a basic MySQL database service",
      "tags": "database,mysql",
      "iconClass" : "icon-mysql-database"
    },
    "name": "mysql"
  },
  "parameters": [
    {
      "description": "database username",
      "from": "user[A-Z0-9]{3}",
      "generate": "expression",
      "name": "MYSQL_USER"
    },
    {
      "description": "database password",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "name": "MYSQL_PASSWORD"
    },
    {
      "description": "database name",
      "name": "MYSQL_DATABASE",
      "value": "sampledb"
    }
  ],
  "labels": {
    "template": "mysql-template"
  },
  "items": [
    {
      "apiVersion": "v1beta1",
      "containerPort": 3306,
      "id": "mysql",
      "kind": "Service",
      "port": 3306,
      "selector": {
        "name": "mysql"
      }
    },
    {
      "apiVersion": "v1beta1",
      "kind": "DeploymentConfig",
      "metadata": {
        "name": "mysql"
      },
      "template": {
        "controllerTemplate": {
          "podTemplate": {
            "desiredState": {
              "manifest": {
                "containers": [
                  {
                    "env": [
                      {
                        "name": "MYSQL_USER",
                        "value": "${MYSQL_USER}"
                      },
                      {
                        "name": "MYSQL_PASSWORD",
                        "value": "${MYSQL_PASSWORD}"
                      },
                      {
                        "name": "MYSQL_DATABASE",
                        "value": "${MYSQL_DATABASE}"
                      }
                    ],
                    "image": "mysql",
                    "name": "mysql",
                    "ports": [
                      {
                        "containerPort": 3306
                      }
                    ]
                  }
                ],
                "version": "v1beta1"
              }
            },
            "labels": {
              "name": "mysql"
            }
          },
          "replicaSelector": {
            "name": "mysql"
          },
          "replicas": 1
        },
        "strategy": {
          "type": "Recreate"
        }
      },
      "triggers": [
        {
          "imageChangeParams": {
            "automatic": true,
            "containerNames": [
              "mysql"
            ],
            "from": {
              "name": "mysql-55-rhel7"
            },
            "tag": "latest"
          },
          "type": "ImageChange"
        }
      ]
    }
  ]
}
