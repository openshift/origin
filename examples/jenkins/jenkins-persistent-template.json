{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "jenkins-persistent",
    "creationTimestamp": null,
    "annotations": {
      "description": "Jenkins service, with persistent storage.",
      "iconClass": "icon-jenkins",
      "tags": "database,jenkins"
    }
  },
